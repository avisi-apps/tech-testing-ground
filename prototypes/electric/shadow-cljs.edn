{:deps {:aliases [:dev]}
 :nrepl {:port 9001}
 :dev-http {8000 {:root "resources/public"}}
 :ssl {:keystore "../shared/ssl/keystore.jks"
       :password "changeit"}
 :builds {:dev {:target :browser
                :devtools {:watch-dir "resources/public"    ; live reload CSS
                           :hud #{:errors :progress}
                           :devtools-url "https://localhost:9630"
                           :ignore-warnings true}           ; warnings don't prevent hot-reload
                :output-dir "resources/public/js"
                :asset-path "/js"
                :dev {:asset-path "https://localhost:8000/js"}
                :modules {:shared {:entries []}
                          :main {:entries [avisi.apps.tech-testing-ground.prototypes.electric.client.main-page]
                                 :init-fn avisi.apps.tech-testing-ground.prototypes.electric.client.main-page/init!
                                 :depends-on #{:shared}}
                          :jira-item-view
                          {:init-fn avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.jira-item-view/init!
                           :entries [avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.jira-item-view]
                           :depends-on #{:shared}}
                          :monday-item-view
                          {:init-fn avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.monday-item-view/init!
                           :entries [avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.monday-item-view]
                           :depends-on #{:shared}}
                          :jira-item-link-modal
                          {:init-fn avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.jira-create-item-link-modal/init!
                           :entries [avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.jira-create-item-link-modal]
                           :depends-on #{:shared}}
                          :monday-item-link-modal
                          {:init-fn avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.monday-create-item-link-modal/init!
                           :entries [avisi.apps.tech-testing-ground.prototypes.electric.client.item-view.monday-create-item-link-modal]
                           :depends-on #{:shared}}}
                :build-hooks [(shadow.cljs.build-report/hook {:output-to "target/build_report.html"})
                              (user/rcf-shadow-hook)]}
          :prod
          {:target :browser
           :output-dir "resources/public/js"
           :asset-path "/js"
           :modules {:main {:entries [user] :init-fn user/start!}}}}}
